//Handshake MATHS

import java.io.*;
import java.util.*;

public class Solution {
    static int handshake(int n) {
    return n*(n-1)/2;
    }
    public static void main(String[] args) {
       Scanner sc= new Scanner(System.in);
        int t = sc.nextInt();
        for (int tItr = 0; tItr < t; tItr++){
            int n = sc.nextInt();

             System.out.println(handshake(n));
        }
    }
}
